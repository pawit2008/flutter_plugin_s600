<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="horizontal">

    <include layout="@layout/left_scroll" />

    <LinearLayout
        android:id="@+id/main_linearlayout"
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="3"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

               <Button
                   style="@style/leftbut"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:onClick="clear_aid_capk_btn"
                    android:text="@string/clear_aid_capk" />

                <Button
                    style="@style/leftbut"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:onClick="clear_aid_btn"
                    android:text="@string/clear_aid" />

                   <Button
                        style="@style/leftbut"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:onClick="clear_capk_btn"
                        android:text="@string/clear_capk" />

                   <Button
                        style="@style/leftbut"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:onClick="save_aid_btn"
                        android:text="@string/save_aid"  />

                <Button
                       style="@style/leftbut"
                       android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:onClick="save_capk_btn"
                        android:text="@string/save_capk" />


                <Button
                    style="@style/leftbut"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:onClick="BankCard"
                    android:text="@string/bank_card" />


            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>