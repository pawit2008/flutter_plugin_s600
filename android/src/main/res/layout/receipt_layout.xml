<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="384dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#FFFFFF">

    <!-- Header: Title -->
    <TextView
        android:id="@+id/header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="爱心卡交易消费凭证"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000" />

    <!-- Service Information (Left-aligned) -->
    <TextView
        android:id="@+id/service_info_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="服务信息"
        android:gravity="left"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp" />

    <!-- Service Item (Two-end aligned: 项目 & Details) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/service_item_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="服务项目："
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/service_item_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="right"
            android:text="头部清洁 x2"
            android:textColor="#000000"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Amount Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp">

        <TextView
            android:id="@+id/amount_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="消费金额："
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/amount_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="right"
            android:text="40.00"
            android:textColor="#000000"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Footer: Order Info -->
    <TextView
        android:id="@+id/order_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="订单信息"
        android:gravity="left"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp" />
</LinearLayout>
